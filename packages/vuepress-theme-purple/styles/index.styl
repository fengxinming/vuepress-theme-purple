// 滚动条宽度
$scrollbarWidth = 0.5rem

.webkit-scrollbar
  ::-webkit-scrollbar
    width $scrollbarWidth
    height $scrollbarWidth

  ::-webkit-scrollbar-button
    display none

  ::-webkit-scrollbar-track, ::-webkit-scrollbar-track-piece
    background lighten($primaryBgColor, 90%)

  ::-webkit-scrollbar-thumb, ::-webkit-scrollbar-thumb:horizontal
    border-radius $scrollbarWidth
    background lighten($primaryBgColor, 70%)

  ::-webkit-scrollbar-thumb:hover
    background lighten($primaryBgColor, 50%)

  ::-webkit-scrollbar-thumb:active
    background lighten($primaryBgColor, 30%)

.theme-container
  background-color #f4f5f5

.page
  background-color #fff